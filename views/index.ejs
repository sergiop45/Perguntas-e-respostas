<%- include('partials/head.ejs'); %>
<%- include('partials/navbar.ejs'); %>
<body>
    <div class="container">
    <hr>
    <h1>Perguntas</h1>
    <hr>
    <a href="/perguntar" class="btn" id="btn-perguntar">Perguntar</a>
    <hr>


    <%  perguntas.forEach(pergunta => { %>
        <div class="card">
            <div class="card-body">
                <p><%= pergunta.titulo %></p>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" href="/pergunta/<%= pergunta.id %>">Responder</a>
            </div>
        </div>
        <br>
    <% }) %>
    </div>
</body>
